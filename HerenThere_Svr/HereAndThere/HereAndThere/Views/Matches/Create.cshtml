
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Match</h4>
        <hr />
        @if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
        {
            <div class="alert alert-info">
                <strong>@ViewBag.StatusMessage!</strong> 
            </div>
        }
        
        <div class="form-group">
            @Html.Label("Start Time (GMT)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("startTime", new { htmlAttributes = new { @class = "form-control",@Value= "2016-11-07T21:00:29" } })               
            </div>
        </div>

        <div class="form-group">
            @Html.Label("End Time (GMT)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("endTime", new { htmlAttributes = new { @class = "form-control", @Value = "2016-12-01T23:50:28.78" } })              
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Lower Left Latitude", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("lowerLeftLatitude", new { htmlAttributes = new { @class = "form-control",@Value= "65.051927" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Lower Left Longitude", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("lowerLeftLongitude", new { htmlAttributes = new { @class = "form-control", @Value= "25.447425" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Upper Right Latitude", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("upperRightLatitude", new { htmlAttributes = new { @class = "form-control",@Value= "65.064007" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Upper Right Longitude", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("upperRightLongitude", new { htmlAttributes = new { @class = "form-control" ,@Value= "25.475646" } })
            </div>
        </div>
      

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
